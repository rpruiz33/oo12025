package modelo;

import java.util.Arrays;

public class ArregloUnidimensional {
private int [] vector ;

public int[] getVector() {
	return vector;
}

public void setVector(int[] vector) {
	this.vector = vector;
}

public ArregloUnidimensional(int[] vector) {
	super();
	this.vector = vector;
}


public int  traerElMenor() {
	int menor=0;

	menor=vector[0];
	for (int i=0;i<vector.length;i++) {
		if(vector[i]<menor) {
			menor=vector[i];
		
			
		}
	}
	
	
	
	
	return menor;
}	


public int  traerElMayor() {
	int mayor=0;
	
	mayor=vector[0];
	for (int i=0;i<vector.length;i++) {
		if(vector[i]>mayor) {
			mayor=vector[i];
		
			
		}
	}
	
	
	
	
	return mayor;
}


public double calcularElmpromedio() {
	double promedio=0;
	for (int i=0;i<vector.length;i++) {
		promedio=promedio+vector[i];
		
		
	}
	
	promedio=promedio/vector.length;
	
	
	return promedio;
	
	
}


public void ordenarAscendente() {
	
	int aux=0;
	
	for (int i=0;i<vector.length;i++) {
		for (int j=0;j<vector.length-1;j++) {
			
			if(vector[i]<vector[j]) {
				aux=vector[i];
				vector[i]=vector[j];
				vector[j]=aux;
				
				
		}
		}
	}
	
}


public void ordenarDesendente() {
	
	int aux=0;
	
	for (int i=0;i<vector.length;i++) {
		for (int j=0;j<vector.length-1;j++) {
			
			if(vector[i]>vector[j]) {
				aux=vector[i];
				vector[i]=vector[j];
				vector[j]=aux;
				
				
		}
		}
	}
	
}


public void mostrar() {
	for(int i=0;i< vector.length;i++) {
     System.out.println("ArregloUnidimensional [vector=" + vector[i]);

}
}

public int traerFrecuencia(int numero) {
	int cont=0;
	for(int i=0;i< vector.length;i++) {
	
	if(vector[i]==numero) {
		cont++;
	}
	
	
	}

return cont;
}




public int traerModa() {
	int cont=0;
	int cont2=0;
	int aux1=0;
	int mayor=0;
	int aux=0;
	for(int i=0;i< vector.length;i++) {
		cont=traerFrecuencia(vector[i]);
		
	
		for(int j=0;j< vector.length;j++) {
			if(cont==traerFrecuencia(vector[j])) {
				
				aux1++;
				
				
			}
		}
	
		aux1=0;
		
	}
	
	return aux1;
		
}
	
	
	
	


}

