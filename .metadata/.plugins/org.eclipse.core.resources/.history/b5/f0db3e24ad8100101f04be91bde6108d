package test;

public class ArregloBidimencional {
	private double[][] matrizA;

	public double[][] getMatrizA() {
		return matrizA;
	}

	public void setMatrizA(double[][] matrizA) {
		this.matrizA = matrizA;
	}

	public ArregloBidimencional(double[][] matrizA) {
		super();
		this.matrizA = matrizA;
	}
	
	
	public double[][] sumar(double[][] matrizB){
		int filas=2;
		int columna=3;
		double[][] matrizC=new double[2][3];
		
		
		for(int i=0;i<2;i++) {
			for(int j=0;j<3;j++) {
				matrizC[i][j]=this.matrizA[i][j]+matrizB[i][j];
				
			}
			
		}
		
		this.mostrar(matrizC, filas, columna);
		
		return matrizC;
	}
	
	
	
	public double[][] restar(double[][] matrizB){
		double[][] matrizC=new double[matrizB.length][matrizB.length];
		
		for(int i=0;i<matrizB.length;i++) {
		
			for(int j=0;j<matrizB.length;j++) {
				matrizC[i][j]=this.matrizA[i][j]-matrizB[i][j];
				
			}
			
		}
		
	this.mostrar(matrizC, matrizB.length, matrizB.length);
		
		return matrizC;
	}
	
	

public double[][] traspuesta(){
	
	int fila=3;
	int columnas=2;
	double[][] matrizC=new double[fila][columnas];
	for(int i=0;i<fila;i++) {
		for(int j=0;j<columnas;j++) {
			matrizC[i][j]=matrizA[j][i];
			
		}
		}
	
	this.mostrar(matrizC, fila, columnas);
	
	return matrizA;
	
	
	
	
}


public double[][] multiplicar(double numero){
	double[][] matrizC=new double[matrizA.length][matrizA.length];

	for(int i=0;i<matrizA.length;i++) {
		for(int j=0;j<matrizA.length;j++) {
	
			matrizC[i][j]=numero*matrizA[j][i];
}
		
}

	this.mostrar(matrizC, matrizA.length,matrizA.length);

	return matrizC;

}


public double[][] multiplicar(double [][]matrizB ){
	int filas=2;
	int columnas=3;
	double [][] resultado= new double[filas][columnas];

	for (int i = 0; i <filas; i++) {
		for (int j = 0; j <columnas ; j++) {
			for (int k = 0; k < columnas; k++) {
                resultado[i][j] += matrizA[i][k] * matrizB[k][i];
            }
	}
	this.mostrar(resultado, filas,columnas);
	
}

	return resultado;
}

public void mostrar (double [][]matrizB,int fila, int columna) {
	for (int i = 0; i <fila; i++) {
		System.out.println();
		for (int j = 0; j <columna; j++) {
			System.out.print(" "+matrizB[i][j]);
		}
		}
	
	
}


}

